{
  "name": "action",
  "version": "0.0.0-development",
  "private": true,
  "description": "GitHub Action",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint src/**/*.ts",
    "pkg": "ncc build --license LICENSE --minify",
    "pkg:watch": "ncc build --license LICENSE --watch",
    "all": "yarn fmt && yarn lint && yarn build && yarn pkg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maximousblk/action.git"
  },
  "author": "Maximous Black",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/parser": "^4.15.1",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "typescript": "^4.1.5"
  }
}
